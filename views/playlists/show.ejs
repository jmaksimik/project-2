<%- include('../partials/header')  %> 
   <h1><%= playlist.playlistName %></h1>
    <% if (playlist.songs.length) { %>
        <table>
            <thead>
                <tr>
                    <th>Song</th>
                    <th>Artist</th>
                    <th>Genre</th>
                </tr>
            </thead>
            <tbody>
                <% playlist.songs.forEach(s => { %>
                 <tr>
                    <td><%= s.title %> </td>
                    <td><%= s.artist %> </td>
                    <td><%= s.genre %> </td>
                    <td><form action="/songs/<%=s._id%>?_method=DELETE"
                        class="song-delete" method="POST">
                            <button type="submit">Delete Song</button>
                        </form>
                    </td>
                 </tr>
                <% }) %>
            </tbody>
        </table>
     <% } else { %>
      <h2>No Songs - Start Adding!</h2>
    <% } %>
    <form id="add-song-form" action="/playlists/<%=playlist._id%>/songs" method="POST">
        <label>Song Title:</label>
        <input type="text" name="title" required>
        <label>Artist:</label>
        <input type="text" name="artist" required>
        <label>Genre:</label>
        <input type="text" name="genre">
        <input type="submit" value="Add Song">
    </form>
    <h2>Comments</h2>
    <% if (user) { %>
        <form id="add-comment-form" method="POST" 
        action="/playlists/<%=playlist._id%>/comments">
            <textarea name="text"></textarea>
            <button type="submit">Add Coment</button>
    </form>
    <% } else { %>
     <span>You have to <a href='/auth/google'>Log in</a> in order to submit!</span>
    <% } %>
    <% if (playlist.comments.length) { %>
        <table>
            <thead>
                <tr>
                    <th>User</th>
                    <th>Date</th>
                    <th>Comment</th>
                </tr>
            </thead>
            <tbody>
                <% playlist.comments.forEach(function(c) { %>
                    <tr>
                        <td class="user-info"><%=c.userName%></td>
                        <td>
                            <%= c.createdAt.toLocaleDateString()%> 
                        </td>
                        <td><%= c.text %> </td>
                        <td>
                            <% if (user && user._id.equals(c.user)) { %>
                                <form action="/comments/<%=c._id%>?_method=DELETE" method="POST">
                                    <button type="submit">Delete Comment</button>
                                </form>
                                <form action="/comments/<%= c._id%>?_method=PUT" method="POST">
                                    <input name="text" value="<%= c.text %>">
                                    <button type="submit">Edit Comment</button>
                                </form>     
                            <% } %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
        <% } else { %>
         <h5>No Reviews Yet. Change that!</h5>
    <% } %>
<%- include('../partials/footer')  %> 